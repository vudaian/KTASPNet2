@model List<OnTapKiemTra2.Models.Sinhvien>
@{
    ViewData["Title"] = "Index";
}

<h2>Danh sách sinh viên</h2>
<a href="/SinhVien/Add" class="btn btn-success">Thêm mới sinh viên</a>
<table class="table">
    <thead>
        <tr>
            <th>Mã sinh viên</th>
            <th>Tên sinh viên</th>
            <th>Lớp</th>
            <th>Điểm trung bình</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Msv</td>
                <td>@item.TenSinhVien</td>
                <td>@item.Lop</td>
                <td>@item.Diem</td>
                <td>
                    <a class="btn btn-success" href="/SinhVien/Edit/@item.Msv" style="margin-right: 10px">Sửa</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="SinhVien" asp-route-id="@item.Msv">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>